<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/RelativeLayout1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/RelativeLayout1_2"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btn_popup_test"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/selector_btn"
                    android:gravity="center"
                    android:text="팝업 창"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_progressBar_test"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_btn"
                    android:gravity="center"
                    android:text="진행도바"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_progress_test"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/selector_btn"
                    android:gravity="center"
                    android:text="진행도"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_test"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="테스트"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_left_btn"
                    android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
                    android:paddingLeft="20dp"
                    android:text="LEFT"
                    android:textColor="@color/colorLightBlue" />

                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_right_btn"
                    android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                    android:paddingRight="20dp"
                    android:text="RIGHT"
                    android:textColor="@color/colorLightBlue" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>