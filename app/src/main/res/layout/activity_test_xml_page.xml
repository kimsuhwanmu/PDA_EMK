<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/Relative_layout"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Relative_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_prev_layout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/selector_btn_left"
                android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
                android:paddingLeft="20dp"
                android:text="이전"
                android:textColor="@color/colorLightBlue"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_next_layout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_btn_right"
                android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                android:paddingRight="20dp"
                android:text="다음"
                android:textColor="@color/colorLightBlue"
                android:textSize="20dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>