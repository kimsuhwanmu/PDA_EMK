<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    >
    <!-- 타이틀-->

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/step1"
        android:gravity="center"
        android:text="출고이동요청서"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/box_view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_box"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/app_view13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:gravity="right|center"
                android:text="출고요청번호"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/app_view111"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/prodtorder_opr_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/bg_text_barcode"
                    android:textColor="@color/colorBodyContent"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_view102"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="출고창고"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/out_wh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="요청창고"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/in_wh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_view103"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="출고유형"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/out_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="수불유형"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rec_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_view104"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="요청일"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/request_dt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="right|center"
                android:text="요청자"
                android:textColor="@color/colorBodyTitle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|right"
                android:text=""
                android:textColor="@color/colorBodyContent"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="품목         |     품명/규격      |   요청수   |       납기일   "
            android:textColor="@color/design_default_color_primary"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/listOrder"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_below="@+id/lbl_information"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_box">

        </ListView>


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/box_view5"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_btn"
        android:focusable="false"
        android:gravity="center"
        android:text="출고이동처리"
        android:textAlignment="center"
        android:textColor="@android:color/white" />



</RelativeLayout>

